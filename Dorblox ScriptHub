local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/jensonhirst/Orion/main/source"))()
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RemotesFolder = ReplicatedStorage:WaitForChild("Remotes")
local BuyItemRemote = RemotesFolder:WaitForChild("BuyItem")
local BuyGearRemote = RemotesFolder:WaitForChild("BuyGear")
local EquipBestRemote = RemotesFolder:WaitForChild("EquipBestBrainrots")
local TweenService = game:GetService("TweenService")
local BrainrotsFolder = workspace:WaitForChild("ScriptedMap"):WaitForChild("Brainrots")

local Window = OrionLib:MakeWindow({
    Name = "DorbloxHub",
    HidePremium = false,
    SaveConfig = false,
    ConfigFolder = "DorbloxHub"
})

-- Auto Collect Tab
local CollectTab = Window:MakeTab({
    Name = "Auto Collect",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local autoCollect = false
CollectTab:AddToggle({
    Name = "Auto Collect Money",
    Default = false,
    Callback = function(Value)
        autoCollect = Value
        if Value then
            task.spawn(function()
                while autoCollect do
                    EquipBestRemote:FireServer()
                    task.wait(5)
                end
            end)
        end
    end
})

-- Auto Buy Seeds Tab
local SeedsTab = Window:MakeTab({
    Name = "Auto Buy Seeds",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local seeds = {
    "Mango Seed","Carnivorous Plant Seed","Mr Carrot Seed","Tomatrio Seed","Grape Seed",
    "Shroombino Seed","Cocotank Seed","Eggplant Seed","Watermelon Seed","Pumpkin Seed",
    "Sunflower Seed","Strawberry Seed","Dragon Fruit Seed","Cactus Seed"
}
local seedToggles = {}
local function startAutoBuySeed(seed)
    task.spawn(function()
        while seedToggles[seed] do
            BuyItemRemote:FireServer(seed, true)
            task.wait(0.5)
        end
    end)
end
for _, seed in ipairs(seeds) do
    SeedsTab:AddToggle({
        Name = seed,
        Default = false,
        Callback = function(Value)
            seedToggles[seed] = Value
            if Value then startAutoBuySeed(seed) end
        end
    })
end

-- Auto Buy Gears Tab
local GearsTab = Window:MakeTab({
    Name = "Auto Buy Gears",
    Icon = "rbxassetid://4483345998",
